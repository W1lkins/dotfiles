# colourscheme {{{

set $background  #1d2021
set $foreground  #ebdbb2
set $black       #282828
set $darkgrey    #928374
set $darkred     #cc241d
set $red         #fb4934
set $darkgreen   #98971a
set $green       #b8bb26
set $darkyellow  #d79921
set $yellow      #fabd2f
set $darkblue    #458588
set $blue        #83a598
set $darkmagenta #b16286
set $magenta     #d3869b
set $darkcyan    #689d6a
set $cyan        #8ec07c
set $lightgrey   #a89984
set $white       #ebdbb2

# window colors
client.focused                $foreground      $foreground     $bacground   $foreground
client.focused_inactive       $darkgrey        $darkgrey       $foreground  $darkgrey
client.unfocused              $darkgrey        $darkgrey       $foreground  $darkgrey
client.urgent                 $red             $red            $background  $red

# }}}

# basic settings {{{

set $mod Mod1
set $term urxvt
set $browser chromium
set $mail thunderbird
set $music $term -name ncmpcpp -e ncmpcpp

font pango:Tamzen 10
floating_modifier $mod
hide_edge_borders both

# workspace icons
set $ws1 "1: "
set $ws2 "2: "
set $ws3 "3: "
set $ws4 "4: "
set $ws5 "5: "
set $ws6 "6: "
set $ws7 "7: "
set $ws8 "8: "
set $ws9 "9: "
set $ws10 "10: "

# workspace bindings
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

#}}}

# i3-gaps {{{

gaps inner 10
gaps outer 5
smart_gaps on
for_window [class="^.*"] border pixel 0
new_window 1pixel

# enable and disable gaps
bindsym $mod+Shift+d gaps inner all set 0; gaps outer all set 0
bindsym $mod+d gaps inner all set 10; gaps outer all set 5;

#}}}

# basic key bindings {{{

bindsym $mod+f fullscreen toggle
bindsym $mod+h split h
bindsym $mod+Shift+q kill
bindsym $mod+t exec $term
bindsym $mod+v split v

bindsym $mod+Ctrl+s layout stacking
bindsym $mod+Ctrl+w layout tabbed
bindsym $mod+Ctrl+e layout toggle split

bindsym $mod+Shift+space floating toggle
bindsym $mod+Shift+c reload
bindsym $mod+Ctrl+r restart

bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Do you really want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+o exec $term -e ranger
bindsym $mod+b exec --no-startup-id $browser
bindsym $mod+i exec $term -e htop
bindsym $mod+m exec --no-startup-id $music
bindsym $mod+e exec --no-startup-id $mail

# }}}

# external bindings {{{

bindsym $mod+r exec rofi -show run -lines 5 -width 100 -padding 350 -opacity "85" -bw 0 -font "Tamzen 12"
bindsym $mod+Shift+r exec rofi -modi lpass:rofi-lpass -show lpass
bindsym $mod+Shift+s exec scrot '%Y-%m-%d-%H-%M.png' -e 'mv $f ~/media/screenshots'
bindsym $mod+space exec $HOME/.i3/lock/lock

# }}}

# window assignments {{{

assign [Class="Chromium"] $ws1
for_window [class="Spotify"] move to workspace $ws10
for_window [class="Thunderbird"] move to workspace $ws7
for_window [class="streamlink-twitch-gui"] move to workspace $ws5
for_window [class="mpv"] move to workspace $ws6
for_window [instance="twitch.+(chat)"] move to workspace $ws6
for_window [title="^ncmpcpp"] move to workspace $ws10

# }}}

# i3 bar {{{

bar {
    strip_workspace_numbers yes
    height 20
    position top
    status_command i3blocks -c ~/.i3/i3blocks.conf
    separator_symbol "⁝"
    font pango: Tamzen, FontAwesome 12
    colors {
        background $background
        statusline $foreground
        separator $darkgrey

        focused_workspace  $background $background $foreground
        active_workspace   $background $background $foreground
        inactive_workspace $background $background $darkgrey
        urgent_workspace   $background $background $red
    }
}

# }}}

# startup programs {{{

# turn off beeping
exec --no-startup-id xset b off
# fix the keyboard layout
exec_always --no-startup-id xmodmap ~/.Xmodmap
# wifi
exec --no-startup-id nm-applet
# x-application resources
exec_always --no-startup-id xrdb ~/.Xresources
# screen colour
exec --no-startup-id xflux -l 55.9 -g -3.5
# wallpaper
exec_always --no-startup-id feh --bg-fill --no-fehbg ~/.config/wall.png
# composite manager
exec --no-startup-id compton -f --config ~/.compton.conf
# fix keyboard
exec_always --no-startup-id set-keymap --no-convert uk
exec_always --no-startup-id set-x11-keymap gb
exec_always --no-startup-id setxkbmap gb
# hide the mouse after a brief period
exec --no-startup-id unclutter

# }}}

# music {{{

set $music urxvt -e ncmpcpp
set $inc --no-startup-id mpc volume +10
set $dec --no-startup-id mpc volume -10
set $pause --no-startup-id mpc toggle
set $next --no-startup-id mpc next
set $prev --no-startup-id mpc prev
set $forward --no-startup-id mpc seek +20
set $backward --no-startup-id mpc seek -20
set $beg --no-startup-id mpc seek 0%

# controls
bindsym $mod+p exec $pause
bindsym $mod+less exec $prev
bindsym $mod+Shift+less exec $beg
bindsym $mod+greater exec $next

# volume
bindsym $mod+plus  exec $inc
bindsym $mod+minus exec $dec

# advancing
bindsym $mod+bracketleft exec $backward
bindsym $mod+bracketright exec $forward

# }}}

# scratchpad Window {{{

for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 625 400
for_window [instance="dropdown"] move position center
for_window [instance="dropdown"] move scratchpad
exec --no-startup-id $term -name dropdown -e tmux
bindsym $mod+u [instance="dropdown"] scratchpad show; move position center

#}}}

# XF86 {{{

# audio controls
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
bindsym XF86AudioMute exec amixer -q set Master toggle

# brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# media player controls
bindsym XF86AudioPlay exec $pause
bindsym XF86AudioNext exec $next
bindsym XF86AudioPrev exec $prev

# }}}

