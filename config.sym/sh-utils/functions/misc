#!/bin/bash

function start-torrent() {
  deluged; deluge-web&;
}

function stop-torrent() {
  pkill deluge; pkill deluged; pkill deluge-web;
}

function check-ip() {
  curl icanhazip.com
}

function src() {
  source ~/.zshrc
}

function pls() {
  sudo $(fc -ln -1)
}

function irc() {
  weechat
}

function weather() {
  curl wttr.in/Edinburgh
}

function hist() {
  "$HOME"/historian/hist
}

function wtf() {
  dmesg | tail
}

# Make CTRL-Z background things and unbackground them.
function fg-bg() {
  if [[ $#BUFFER -eq 0 ]]; then
    fg
  else
    zle push-input
  fi
}

