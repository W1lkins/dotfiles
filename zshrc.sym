#!/bin/bash

# first source our env variables
source "$HOME/.env"

# source all the files in .config
while IFS= read -r -d '' file
do
  source "$file"
done <   <(find "$HOME/.config/sh-utils" -type f -print0)

# source a system specific config if one exists
[ -s "$HOME"/.extra ] && source "$HOME"/.extra || return 0

[ -s ~/.fzf.zsh ] && source ~/.fzf.zsh

